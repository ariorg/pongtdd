{
  "name": "pong",
  "version": "1.0.0",
  "description": "Pong game to demonstrate TDD",
  "main": "index.js",
  "type": "module",
  "homepage": "https://github.com/arividar/pongtdd",
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "verbose": false,
    "collectCoverage": true,
    "coverageProvider": "babel",
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "prettier": {
    "printWidth": 96,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "scripts": {
    "start": "lite-server",
    "test": "jest --env=jsdom",
    "testv": "jest --verbose",
    "testw": "jest --watch"
  },
  "keywords": [
    "game",
    "tdd"
  ],
  "author": "Ari Johannesson",
  "license": "ISC",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "jest": "^27.4.7",
    "jest-canvas-mock": "^2.3.1",
    "jsdom": "^19.0.0",
    "lite-server": "^2.6.1"
  },
  "dependencies": {
    "prettier": "^2.5.1"
  }
}
